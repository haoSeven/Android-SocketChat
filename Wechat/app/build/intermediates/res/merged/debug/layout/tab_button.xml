<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="@color/colorWhile"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/talk_button"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/talk_button_icon"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:src="@drawable/chat2"
            android:background="@color/colorWhile"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/colorWhile"
            android:gravity="center|top"
            android:text="聊天"
            android:textSize="10sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/friend_button"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/friend_button_icon"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:src="@drawable/friend2"
            android:background="@color/colorWhile"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/colorWhile"
            android:gravity="center|top"
            android:text="好友"
            android:textSize="10sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/set_button"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/set_button_icon"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:src="@drawable/me2"
            android:background="@color/colorWhile"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/colorWhile"
            android:gravity="center|top"
            android:text="我"
            android:textSize="10sp" />
    </LinearLayout>


</LinearLayout>

